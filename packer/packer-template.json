{
  "builders": [
    {
      "type": "vagrant",
      "provider": "virtualbox",
      "source_path": "bento/centos-7.9",
      "box_name": "bento/centos-7.9",
      "communicator": "ssh",
      "add_force": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base-yum.sh",
        "scripts/disable-motd-news.sh",
        "scripts/install-cni-plugins.sh",
        "scripts/install-docker.sh",
        "scripts/install-java.sh",
        "scripts/install-qemu.sh",
        "scripts/install-nomad.sh",
        "scripts/install-consul.sh",
        "scripts/install-vault.sh",
        "scripts/install-glibc.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}